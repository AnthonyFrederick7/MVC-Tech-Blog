<div>
    <form class="form" id="new-blog-form">
        <div>
            <h1>New Blog</h1>
        </div>
        <div class="form-group">
            Title: <input class="form-control" type="text" id="blog-title">
        </div>
        <div class="form-group">
            <div class="form-group">
                <label for="blog-body">Blog:</label>
                <textarea class="form-control" id="blog-content" rows="25" style="width: 100%"></textarea>
            </div>
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">
                Submit Blog
            </button>
        </div>
    </form>
</div>
<script src="../js/newBlog.js"></script>