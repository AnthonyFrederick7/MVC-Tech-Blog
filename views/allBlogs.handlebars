{{#each blogs as |blog| }}
<div class="card">
    <div class="card-body">
        <h2 class="card-title">{{blog.title}}</h2>
        <h4 class="card-subtitle mb-2 text-muted">{{blog.user.username}} on {{ formatDate blog.createdAt}}</h6>
            <p class="card-text">{{blog.description}}</p>
            <a href="/blog/{{blog.id}}" class="card-link">View Post and Comments</a>
    </div>
</div>
{{/each}}