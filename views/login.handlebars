<form id="login-form">
    <div class="form-group row">
        <label for="staticEmail" class="labelHeaders col-sm-2 col-form-label">Username</label>
        <div class="col-sm-10">
            <input type="text" id="username-input-login">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword" class="labelHeader col-sm-4">Password</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="password-input-login">
        </div>
    </div>
    <div class="form-group row">
        <button type="submit" class="loginButton">Login</button>
    </div>
</form>
<h4 style="margin-top: 10px; text-align: center;">Don't have an account? <a href="/signup">Sign up</a></h1>
